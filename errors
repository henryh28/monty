#include "monty.h"

/**
 * main - error handling
 *
 * @argc: count arguments
 * @argv: argument array
 * Return: EXIT_FAILURE on any failures
 */
void no_file_error(size_t letters);
{
	 FILE *filename;
  	 int fd;
  	 char *buf;

  	 if (filename == NULL)
    	 {
      	 printf("USAGE: monty file\n");
      	 exit(EXIT_FAILURE);
    	 }
}

void no_arg_error(int argc, char **argv)
{
	if (argc < 2)
    	{
      	printf("USAGE: monty file\n");
      	exit(EXIT_FAILURE);
    	}
}

void open_file_error(
  buf = malloc(sizeof(char) * letters);
  if (buf == NULL)
    return (NULL);

  fd = open(argv[1], O_RDONLY);
  if (fd == -1)
    {
      printf("Error: Can't open file <file> %s\n", argv[1]);
      free(buf);
      close(fd);
      exit(EXIT_FAILURE);
    }
}
